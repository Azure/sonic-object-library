#!/bin/sh

set -e

if [ "$1" = configure ]; then
    if ! getent group cpsusers >/dev/null; then
        addgroup --quiet --system cpsusers
    fi
    if ! getent passwd cpsuser >/dev/null; then
        adduser --quiet --system \
                --disabled-login --disabled-password \
                --home /undefined --no-create-home \
                --gecos "CPS" cpsuser
    fi
fi

